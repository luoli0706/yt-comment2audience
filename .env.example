# Copy this file to .env and fill in your real keys

# ===== AI (DeepSeek) =====
# DeepSeek provides an OpenAI-compatible API.
AI_PROVIDER=deepseek
AI_API_KEY=
AI_API_URL=https://api.deepseek.com/v1/chat/completions
AI_MODEL_NAME=deepseek-chat

# Prompt can be a quoted string. If you need multiple lines, use \n.
AI_PROMPT="AI_PROMPT/AI_PROMPT_Default.txt"
# Optional generation controls
AI_TEMPERATURE=0.2
AI_MAX_TOKENS=1024

# ===== YouTube =====
YOUTUBE_API_KEY=
YOUTUBE_API_URL=https://www.googleapis.com/youtube/v3/commentThreads

# ===== Proxy (optional) =====
# Leave empty if you don't need a proxy.
HTTP_PROXY=
HTTPS_PROXY=
NO_PROXY=localhost,127.0.0.1

# ===== Flow =====
MAX_RESULTS=100
RETRY_TIMES=3
RETRY_INTERVAL=5

# ===== Flask App =====
HOST=127.0.0.1
PORT=5076
